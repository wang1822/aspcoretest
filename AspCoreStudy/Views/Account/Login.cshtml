@model AspCoreStudy.Models.User

@{
    ViewData["Title"] = "登录";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 350px; border-radius: 12px;">
        <h3 class="text-center mb-3">用户登录</h3>

        <form id="loginForm" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">账号</label>
                <input type="text" class="form-control" id="username" name="Username" required placeholder="输入账号"
                    value="@Model?.Username">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">密码</label>
                <input type="password" class="form-control" id="password" name="PasswordHash" required
                    placeholder="输入密码" value="@Model?.PasswordHash">
            </div>
            <button type="submit" class="btn btn-primary w-100">登录</button>
        </form>

        <div class="mt-3 text-center">
            <a href="#">忘记密码？</a> | <a href="/Account/Register">注册</a>
        </div>
    </div>
</div>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/js/ajaxHelper.js"></script>
<script src="/js/login.js"></script>