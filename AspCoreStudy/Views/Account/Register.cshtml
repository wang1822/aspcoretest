@model AspCoreStudy.Models.User

@{
    Layout = null;
    ViewData["Title"] = "注册";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 350px; border-radius: 12px;">
        <h3 class="text-center mb-3">用户注册</h3>

        <form id="registerForm">
            <div class="mb-3">
                <label for="username" class="form-label">账号</label>
                <input type="text" class="form-control" id="username" name="Username" required placeholder="输入账号">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">密码</label>
                <input type="password" class="form-control" id="password" name="PasswordHash" required
                    placeholder="输入密码">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">电子邮件（选填）</label>
                <input type="email" class="form-control" id="email" name="Email" placeholder="输入电子邮件">
            </div>
            <button type="submit" class="btn btn-primary w-100">注册</button>
        </form>
        <div class="mt-3 text-center">
            <a href="/Account/Login">已有账号？登录</a>
        </div>
    </div>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - AspCoreStudy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/ajaxHelper.js"></script>
<script src="~/js/register.js"></script>